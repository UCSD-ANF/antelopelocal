#!/bin/sh
umask 0002

imver=6.5.0
impatchver=3
tarfile=ImageMagick-${imver}-${impatchver}.tar.gz
builddir=ImageMagick-${imver}-${impatchver}


. ./envsetup.sh

#LDFLAGS="-R${ANTELOPE}/lib"
#export LDFLAGS

if [ -d $builddir ]; then
  rm -rf $builddir
fi

$TAR zxvf ${IGPPDISTFILES}/$tarfile
cd $builddir
#make clean
./configure \
  CC=/opt/SUNWspro/bin/cc CXX=/opt/SUNWspro/bin/CC \
#  --prefix="${ANTELOPE}/local" \
  --prefix="${ANF}" \
  --with-perl="/opt/antelope/`getid perl`/bin/perl" \
  --enable-lzw \
  --enable-shared \
  --with-ttf \
  CPPFLAGS="-I$ANTELOPE/lib -I$ANTELOPE/local/lib -xCC" \
  LDFLAGS="-R$ANTELOPE/lib -L$ANTELOPE/lib -R$ANTELOPE/local/lib -L$ANTELOPE/local/lib" \
  --without-magick-plus-plus \

make -j all
make install
